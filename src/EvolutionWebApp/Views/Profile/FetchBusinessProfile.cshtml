@model Evolution.Client.CSharp.Models.Profile.FetchBusinessProfileRequest

@{
    ViewData["Title"] = "Buscar Perfil de Negócio";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Início</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Profile")">Perfil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Buscar Perfil de Negócio</li>
                </ol>
            </nav>

            <h2 class="mb-4">
                <i class="fas fa-building"></i>
                Buscar Perfil de Negócio
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-search"></i>
                        Informações da Busca
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="FetchBusinessProfile" method="post">
                        <div class="mb-3">
                            <label for="instanceName" class="form-label">Nome da Instância *</label>
                            <input type="text" class="form-control" id="instanceName" name="instanceName" 
                                   placeholder="Digite o nome da instância" required>
                            <div class="form-text">Nome da instância WhatsApp configurada.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Number" class="form-label">Número do WhatsApp *</label>
                            <input asp-for="Number" class="form-control" 
                                   placeholder="5511999999999" required>
                            <div class="form-text">Número do WhatsApp com código do país (sem símbolos).</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Buscar Perfil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle"></i>
                        Informações
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Buscar Perfil de Negócio:</strong><br>
                        Esta funcionalidade permite buscar informações detalhadas do perfil de negócio de um número do WhatsApp.
                    </p>
                    <hr>
                    <p class="card-text">
                        <strong>Informações retornadas:</strong>
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Nome do negócio</li>
                        <li><i class="fas fa-check text-success"></i> Categoria</li>
                        <li><i class="fas fa-check text-success"></i> Descrição</li>
                        <li><i class="fas fa-check text-success"></i> Endereço</li>
                        <li><i class="fas fa-check text-success"></i> Email</li>
                        <li><i class="fas fa-check text-success"></i> Website</li>
                        <li><i class="fas fa-check text-success"></i> Foto do perfil</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Success == true && ViewBag.Response != null)
    {
        var response = ViewBag.Response as Evolution.Client.CSharp.Models.Profile.FetchBusinessProfileResponse;
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-check-circle"></i>
                        Perfil de Negócio Encontrado!
                    </h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-8">
                            <p><strong>WUID:</strong> @response.Wuid</p>
                            <p><strong>Nome:</strong> @response.Name</p>
                            <p><strong>Categoria:</strong> @response.Category</p>
                            <p><strong>Descrição:</strong> @response.Description</p>
                            <p><strong>Endereço:</strong> @response.Address</p>
                            <p><strong>Email:</strong> @response.Email</p>
                            <p><strong>Website:</strong> @response.Website</p>
                        </div>
                        @if (!string.IsNullOrEmpty(response.ProfilePictureUrl))
                        {
                            <div class="col-md-4 text-center">
                                <img src="@response.ProfilePictureUrl" alt="Foto do Perfil" class="img-fluid rounded-circle" style="max-width: 150px;">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.Success == false && !string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Erro ao Buscar Perfil
                    </h4>
                    <p>@ViewBag.Error</p>
                </div>
            </div>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Atenção
                    </h4>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>