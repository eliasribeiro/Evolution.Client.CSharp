@model Evolution.Client.CSharp.Models.Profile.FetchProfileRequest

@{
    ViewData["Title"] = "Buscar Perfil de Usuário";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Início</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Profile")">Perfil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Buscar Perfil de Usuário</li>
                </ol>
            </nav>

            <h2 class="mb-4">
                <i class="fas fa-user"></i>
                Buscar Perfil de Usuário
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-search"></i>
                        Informações da Busca
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="FetchProfile" method="post">
                        <div class="mb-3">
                            <label for="instanceName" class="form-label">Nome da Instância *</label>
                            <input type="text" class="form-control" id="instanceName" name="instanceName" 
                                   placeholder="Digite o nome da instância" required>
                            <div class="form-text">Nome da instância WhatsApp configurada.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Number" class="form-label">Número do WhatsApp *</label>
                            <input asp-for="Number" class="form-control" 
                                   placeholder="5511999999999" required>
                            <div class="form-text">Número do WhatsApp com código do país (sem símbolos).</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-search"></i> Buscar Perfil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle"></i>
                        Informações
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Buscar Perfil de Usuário:</strong><br>
                        Esta funcionalidade permite buscar informações do perfil de um usuário do WhatsApp.
                    </p>
                    <hr>
                    <p class="card-text">
                        <strong>Informações retornadas:</strong>
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Nome do usuário</li>
                        <li><i class="fas fa-check text-success"></i> Status</li>
                        <li><i class="fas fa-check text-success"></i> Foto do perfil</li>
                        <li><i class="fas fa-check text-success"></i> Indicador de foto</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Success == true && ViewBag.Response != null)
    {
        var response = ViewBag.Response as Evolution.Client.CSharp.Models.Profile.FetchProfileResponse;
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-check-circle"></i>
                        Perfil de Usuário Encontrado!
                    </h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-8">
                            <p><strong>WUID:</strong> @response.Wuid</p>
                            <p><strong>Nome:</strong> @response.Name</p>
                            <p><strong>Status:</strong> @response.Status</p>
                            <p><strong>Possui Foto de Perfil:</strong> 
                                @if (response.HasProfilePicture)
                                {
                                    <span class="badge bg-success">Sim</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Não</span>
                                }
                            </p>
                        </div>
                        @if (!string.IsNullOrEmpty(response.ProfilePictureUrl))
                        {
                            <div class="col-md-4 text-center">
                                <img src="@response.ProfilePictureUrl" alt="Foto do Perfil" class="img-fluid rounded-circle" style="max-width: 150px;">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.Success == false && !string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Erro ao Buscar Perfil
                    </h4>
                    <p>@ViewBag.Error</p>
                </div>
            </div>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Atenção
                    </h4>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>