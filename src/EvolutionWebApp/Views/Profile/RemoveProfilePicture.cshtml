@{
    ViewData["Title"] = "Remover Foto do Perfil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Início</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Profile")">Perfil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Remover Foto</li>
                </ol>
            </nav>

            <h2 class="mb-4">
                <i class="fas fa-trash-alt"></i>
                Remover Foto do Perfil
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-trash"></i>
                        Remover Foto
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="RemoveProfilePicture" method="post">
                        <div class="mb-3">
                            <label for="instanceName" class="form-label">Nome da Instância *</label>
                            <input type="text" class="form-control" id="instanceName" name="instanceName" 
                                   placeholder="Digite o nome da instância" required>
                            <div class="form-text">Nome da instância WhatsApp configurada.</div>
                        </div>

                        <div class="alert alert-warning" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle"></i>
                                Atenção!
                            </h6>
                            <p class="mb-0">Esta ação irá remover permanentemente a foto do perfil da instância. Esta operação não pode ser desfeita.</p>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja remover a foto do perfil?')">
                                <i class="fas fa-trash-alt"></i> Remover Foto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle"></i>
                        Informações
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Remover Foto do Perfil:</strong><br>
                        Esta funcionalidade remove a foto atual do perfil da instância.
                    </p>
                    <hr>
                    <p class="card-text">
                        <strong>Observações importantes:</strong>
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-exclamation-triangle text-danger"></i> Ação irreversível</li>
                        <li><i class="fas fa-user-circle text-secondary"></i> Perfil ficará sem foto</li>
                        <li><i class="fas fa-clock text-info"></i> Alteração é imediata</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Success == true && ViewBag.Response != null)
    {
        var response = ViewBag.Response as Evolution.Client.CSharp.Models.Profile.RemoveProfilePictureResponse;
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-check-circle"></i>
                        Foto Removida com Sucesso!
                    </h4>
                    <p><strong>Resultado:</strong> @response.Success</p>
                    @if (!string.IsNullOrEmpty(response.Message))
                    {
                        <p><strong>Mensagem:</strong> @response.Message</p>
                    }
                </div>
            </div>
        </div>
    }

    @if (ViewBag.Success == false && !string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Erro ao Remover Foto
                    </h4>
                    <p>@ViewBag.Error</p>
                </div>
            </div>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Atenção
                    </h4>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>