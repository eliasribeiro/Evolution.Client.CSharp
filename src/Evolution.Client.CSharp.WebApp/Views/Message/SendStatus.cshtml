@model Evolution.Client.CSharp.WebApp.Models.SendStatusViewModel
@{
    ViewData["Title"] = "Enviar Status";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-broadcast-tower me-2"></i>
                        Enviar Status
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="SendStatus" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="InstanceName" class="form-label"></label>
                                    <input asp-for="InstanceName" class="form-control" placeholder="Ex: minha-instancia" />
                                    <span asp-validation-for="InstanceName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Type" class="form-label"></label>
                                    <select asp-for="Type" class="form-select">
                                        <option value="text">Texto</option>
                                        <option value="image">Imagem</option>
                                        <option value="audio">Áudio</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label"></label>
                            <textarea asp-for="Content" class="form-control" rows="4" placeholder="Digite o conteúdo do status..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Caption" class="form-label"></label>
                            <input asp-for="Caption" class="form-control" placeholder="Legenda opcional para imagem ou vídeo" />
                            <span asp-validation-for="Caption" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BackgroundColor" class="form-label"></label>
                                    <input asp-for="BackgroundColor" type="color" class="form-control form-control-color" />
                                    <span asp-validation-for="BackgroundColor" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Font" class="form-label"></label>
                                    <select asp-for="Font" class="form-select">
                                        <option value="1">SERIF</option>
                                        <option value="2">NORICAN_REGULAR</option>
                                        <option value="3">BRYNDAN_WRITE</option>
                                        <option value="4">BEBASNEUE_REGULAR</option>
                                        <option value="5">OSWALD_HEAVY</option>
                                    </select>
                                    <span asp-validation-for="Font" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="AllContacts" class="form-check-input" type="checkbox" />
                                <label asp-for="AllContacts" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="mb-3" id="contactListDiv" style="display: none;">
                            <label asp-for="StatusJidListText" class="form-label"></label>
                            <textarea asp-for="StatusJidListText" class="form-control" rows="3" placeholder="5511999999999&#10;5511888888888&#10;..."></textarea>
                            <div class="form-text">Digite um número por linha (com código do país)</div>
                            <span asp-validation-for="StatusJidListText" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>
                                Enviar Status
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Result))
            {
                <div class="card mt-4 shadow">
                    <div class="card-header @(Model.HasError ? "bg-danger" : "bg-success") text-white">
                        <h5 class="mb-0">
                            <i class="fas @(Model.HasError ? "fa-exclamation-triangle" : "fa-check-circle") me-2"></i>
                            @(Model.HasError ? "Erro" : "Sucesso")
                        </h5>
                    </div>
                    <div class="card-body">
                        <pre class="mb-0" style="white-space: pre-wrap; word-wrap: break-word;">@Model.Result</pre>
                    </div>
                </div>
            }

            <div class="card mt-4 shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Dicas de Uso
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li><strong>Tipos de Status:</strong> Escolha entre texto, imagem ou áudio</li>
                        <li><strong>Conteúdo:</strong> Para texto, digite a mensagem. Para mídia, use URL ou base64</li>
                        <li><strong>Cor de Fundo:</strong> Escolha a cor de fundo para status de texto</li>
                        <li><strong>Fonte:</strong> Selecione a fonte para o texto do status</li>
                        <li><strong>Destinatários:</strong> Envie para todos os contatos ou para uma lista específica</li>
                        <li><strong>Lista de Contatos:</strong> Digite um número por linha com código do país</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const allContactsCheckbox = document.getElementById('AllContacts');
            const contactListDiv = document.getElementById('contactListDiv');

            function toggleContactList() {
                if (allContactsCheckbox && contactListDiv) {
                    contactListDiv.style.display = allContactsCheckbox.checked ? 'none' : 'block';
                }
            }

            if (allContactsCheckbox) {
                allContactsCheckbox.addEventListener('change', toggleContactList);
                toggleContactList(); // Inicializar o estado
            }
        });
    </script>
}