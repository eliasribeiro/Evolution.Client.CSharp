@{
    ViewData["Title"] = "Consultar Webhook";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Início</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Webhook")">Webhook</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Consultar</li>
                </ol>
            </nav>

            <h2 class="mb-4">
                <i class="fas fa-search"></i>
                Consultar Webhook
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-search"></i>
                        Buscar Configuração do Webhook
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="FindWebhook" method="post">
                        <div class="mb-3">
                            <label for="instanceName" class="form-label">Nome da Instância *</label>
                            <input type="text" class="form-control" id="instanceName" name="instanceName" 
                                   placeholder="Digite o nome da instância" required>
                            <div class="form-text">Nome da instância WhatsApp para consultar o webhook.</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Webhook")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Consultar Webhook
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle"></i>
                        Informações
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Consulta de Webhook:</strong><br>
                        Visualize as configurações atuais do webhook da instância.
                    </p>
                    <hr>
                    <p class="card-text">
                        <strong>Informações Retornadas:</strong>
                    </p>
                    <ul class="list-unstyled small">
                        <li><i class="fas fa-dot-circle text-primary"></i> Status (Habilitado/Desabilitado)</li>
                        <li><i class="fas fa-dot-circle text-success"></i> URL do Webhook</li>
                        <li><i class="fas fa-dot-circle text-info"></i> Eventos Configurados</li>
                    </ul>
                    <hr>
                    <div class="alert alert-info" role="alert">
                        <small>
                            <i class="fas fa-lightbulb"></i>
                            <strong>Dica:</strong> Use esta consulta para verificar se o webhook está configurado corretamente.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Success == true && ViewBag.Response != null)
    {
        var response = ViewBag.Response as Evolution.Client.CSharp.Models.Webhook.FindWebhookResponse;
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-check-circle"></i>
                        Webhook Encontrado!
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Status:</strong> 
                                @if (response?.Enabled == true)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> Habilitado
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times"></i> Desabilitado
                                    </span>
                                }
                            </p>
                            <p><strong>URL:</strong> 
                                @if (!string.IsNullOrEmpty(response?.Url))
                                {
                                    <a href="@response?.Url" target="_blank" class="text-decoration-none">
                                        @response?.Url <i class="fas fa-external-link-alt"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Não configurada</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            @if (response?.Events?.Length > 0)
                            {
                                <p><strong>Eventos Configurados:</strong></p>
                                <div class="d-flex flex-wrap gap-1">
                                    @foreach (var eventName in response?.Events ?? Array.Empty<string>())
                                    {
                                        <span class="badge bg-primary">@eventName</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p><strong>Eventos:</strong> <span class="text-muted">Nenhum evento configurado</span></p>
                            }
                        </div>
                    </div>
                    <hr>
                    <div class="text-center">
                        <a href="@Url.Action("SetWebhook", "Webhook")" class="btn btn-primary">
                            <i class="fas fa-cog"></i> Configurar Webhook
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.Success == false && !string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Erro ao Consultar Webhook
                    </h4>
                    <p>@ViewBag.Error</p>
                    <hr>
                    <div class="text-center">
                        <a href="@Url.Action("SetWebhook", "Webhook")" class="btn btn-primary">
                            <i class="fas fa-cog"></i> Configurar Webhook
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>