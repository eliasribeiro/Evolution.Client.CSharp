<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Evolution API Client</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
        }
        .nav-link {
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #0d6efd !important;
        }
        .footer {
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-robot me-2"></i>
                    Evolution API Client
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="instancesDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-server me-1"></i>
                                Instâncias
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Instances")">
                                        <i class="fas fa-list me-2"></i>
                                        Listar Instâncias
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Create", "Instances")">
                                        <i class="fas fa-plus me-2"></i>
                                        Criar Instância
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="groupDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-users me-1"></i>
                                Grupos
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Group")">
                                        <i class="fas fa-search me-2"></i>
                                        Buscar Grupos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("CreateGroup", "Group")">
                                        <i class="fas fa-plus me-2"></i>
                                        Criar Grupo
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="chatDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-comment-dots me-1"></i>
                                Chat
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("FindContacts", "Chat")">
                                        <i class="fas fa-address-book me-2"></i>
                                        Buscar Contatos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("FindChats", "Chat")">
                                        <i class="fas fa-comments me-2"></i>
                                        Buscar Chats
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("WhatsAppNumbers", "Chat")">
                                        <i class="fas fa-phone me-2"></i>
                                        Verificar Números
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="messageDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-comments me-1"></i>
                                Mensagens
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("SendText", "Message")">
                                        <i class="fas fa-comment me-2"></i>
                                        Enviar Texto
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("SendMedia", "Message")">
                                        <i class="fas fa-file-upload me-2"></i>
                                        Enviar Mídia
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("SendStatus", "Message")">
                                        <i class="fas fa-broadcast-tower me-2"></i>
                                        Enviar Status
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>
                                Perfil
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("FetchPrivacySettings", "Profile")">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        Consultar Privacidade
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("UpdatePrivacySettings", "Profile")">
                                        <i class="fas fa-user-shield me-2"></i>
                                        Atualizar Privacidade
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="webhookDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-webhook me-1"></i>
                                Webhook
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Webhook")">
                                        <i class="fas fa-home me-2"></i>
                                        Início
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("SetWebhook", "Webhook")">
                                        <i class="fas fa-cog me-2"></i>
                                        Configurar Webhook
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("FindWebhook", "Webhook")">
                                        <i class="fas fa-search me-2"></i>
                                        Consultar Webhook
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="settingsDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cogs me-1"></i>
                                Configurações
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Settings")">
                                        <i class="fas fa-sliders-h me-2"></i>
                                        Configurar Instância
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("FindSettings", "Settings")">
                                        <i class="fas fa-search me-2"></i>
                                        Consultar Configurações
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <span class="text-muted">
                        <i class="fas fa-code me-1"></i>
                        Evolution API Client - C# SDK
                    </span>
                </div>
                <div class="col-md-6 text-end">
                    <span class="text-muted">
                        <i class="fas fa-heart text-danger me-1"></i>
                        Desenvolvido com .NET
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>