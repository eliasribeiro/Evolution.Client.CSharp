@{
    ViewData["Title"] = "Consultar Configurações";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Início</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Settings")">Configurações</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Consultar</li>
                </ol>
            </nav>

            <h2 class="mb-4">
                <i class="fas fa-search"></i>
                Consultar Configurações
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-search"></i>
                        Buscar Configurações da Instância
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="FindSettings" method="post">
                        <div class="mb-3">
                            <label for="instanceName" class="form-label">Nome da Instância *</label>
                            <input type="text" class="form-control" id="instanceName" name="instanceName" 
                                   placeholder="Digite o nome da instância" required>
                            <div class="form-text">Nome da instância WhatsApp para consultar as configurações.</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Settings")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Consultar Configurações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle"></i>
                        Informações
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Consulta de Configurações:</strong><br>
                        Visualize todas as configurações atuais da instância.
                    </p>
                    <hr>
                    <p class="card-text">
                        <strong>Configurações Exibidas:</strong>
                    </p>
                    <ul class="list-unstyled small">
                        <li><i class="fas fa-dot-circle text-danger"></i> Rejeição de Chamadas</li>
                        <li><i class="fas fa-dot-circle text-warning"></i> Mensagem para Chamadas</li>
                        <li><i class="fas fa-dot-circle text-info"></i> Ignorar Grupos</li>
                        <li><i class="fas fa-dot-circle text-success"></i> Sempre Online</li>
                        <li><i class="fas fa-dot-circle text-primary"></i> Leitura de Mensagens</li>
                        <li><i class="fas fa-dot-circle text-secondary"></i> Status de Leitura</li>
                        <li><i class="fas fa-dot-circle text-dark"></i> Sincronização de Histórico</li>
                    </ul>
                    <hr>
                    <div class="alert alert-info" role="alert">
                        <small>
                            <i class="fas fa-lightbulb"></i>
                            <strong>Dica:</strong> Use esta consulta para verificar as configurações atuais antes de fazer alterações.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Success == true && ViewBag.Response != null)
    {
        var response = ViewBag.Response as Evolution.Client.CSharp.Models.Settings.FindSettingsResponse;
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-check-circle"></i>
                        Configurações Encontradas!
                    </h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-phone"></i>
                                        Configurações de Chamadas
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Rejeitar Chamadas:</strong> 
                                        @if (response?.RejectCall == true)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-phone-slash"></i> Habilitado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-phone"></i> Desabilitado
                                            </span>
                                        }
                                    </p>
                                    @if (!string.IsNullOrEmpty(response?.MsgCall))
                                    {
                                        <p><strong>Mensagem para Chamadas:</strong></p>
                                        <div class="alert alert-light">
                                            <small>@response?.MsgCall</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <p><strong>Mensagem para Chamadas:</strong> <span class="text-muted">Não configurada</span></p>
                                    }
                                </div>
                            </div>

                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-users"></i>
                                        Configurações de Grupos
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Ignorar Grupos:</strong> 
                                        @if (response?.GroupsIgnore == true)
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-eye-slash"></i> Habilitado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-eye"></i> Desabilitado
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-user-circle"></i>
                                        Status e Presença
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Sempre Online:</strong> 
                                        @if (response?.AlwaysOnline == true)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-circle"></i> Habilitado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-circle"></i> Desabilitado
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>

                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-envelope"></i>
                                        Configurações de Mensagens
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Ler Mensagens Automaticamente:</strong> 
                                        @if (response?.ReadMessages == true)
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-envelope-open"></i> Habilitado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-envelope"></i> Desabilitado
                                            </span>
                                        }
                                    </p>
                                    <p><strong>Confirmar Leitura:</strong> 
                                        @if (response?.ReadStatus == true)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-check-double"></i> Habilitado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-check"></i> Desabilitado
                                            </span>
                                        }
                                    </p>
                                    <p><strong>Sincronizar Histórico Completo:</strong> 
                                        @if (response?.SyncFullHistory == true)
                                        {
                                            <span class="badge bg-dark">
                                                <i class="fas fa-history"></i> Habilitado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-history"></i> Desabilitado
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Settings")" class="btn btn-primary">
                            <i class="fas fa-cogs"></i> Configurar Instância
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.Success == false && !string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Erro ao Consultar Configurações
                    </h4>
                    <p>@ViewBag.Error</p>
                    <hr>
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Settings")" class="btn btn-primary">
                            <i class="fas fa-cogs"></i> Configurar Instância
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>