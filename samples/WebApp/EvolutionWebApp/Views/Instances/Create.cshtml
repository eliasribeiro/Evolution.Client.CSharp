@model EvolutionWebApp.Models.CreateInstanceViewModel

@{
    ViewData["Title"] = "Criar Nova Instância";
}

<div class="container mt-4">
    <h1 class="display-4 text-center mb-4">Criar Nova Instância</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Nova Instância WhatsApp
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Informações Básicas -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="bi bi-info-circle"></i> Informações Básicas
                                </h5>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="InstanceName" class="form-label"></label>
                                <input asp-for="InstanceName" class="form-control" placeholder="Ex: MinhaInstancia01" />
                                <span asp-validation-for="InstanceName" class="text-danger"></span>
                                <div class="form-text">Nome único para identificar sua instância</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Token" class="form-label"></label>
                                <input asp-for="Token" class="form-control" placeholder="Deixe vazio para gerar automaticamente" />
                                <span asp-validation-for="Token" class="text-danger"></span>
                                <div class="form-text">Token personalizado (opcional)</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Number" class="form-label"></label>
                                <input asp-for="Number" class="form-control" placeholder="Ex: 5511999999999" />
                                <span asp-validation-for="Number" class="text-danger"></span>
                                <div class="form-text">Número com código do país (opcional)</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Integration" class="form-label"></label>
                                <select asp-for="Integration" class="form-select">
                                    <option value="WHATSAPP-BAILEYS">WhatsApp Baileys</option>
                                    <option value="WHATSAPP-BUSINESS">WhatsApp Business</option>
                                </select>
                                <span asp-validation-for="Integration" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Configurações de Webhook -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="bi bi-webhook"></i> Configurações de Webhook
                                </h5>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Webhook" class="form-label"></label>
                                <input asp-for="Webhook" class="form-control" placeholder="https://meusite.com/webhook" />
                                <span asp-validation-for="Webhook" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mt-4">
                                    <input asp-for="WebhookByEvents" class="form-check-input" type="checkbox" />
                                    <label asp-for="WebhookByEvents" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Configurações Gerais -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="bi bi-gear"></i> Configurações Gerais
                                </h5>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="QrCode" class="form-check-input" type="checkbox" />
                                    <label asp-for="QrCode" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="RejectCall" class="form-check-input" type="checkbox" />
                                    <label asp-for="RejectCall" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label asp-for="MsgCall" class="form-label"></label>
                                <input asp-for="MsgCall" class="form-control" placeholder="Mensagem enviada quando uma chamada for rejeitada" />
                                <span asp-validation-for="MsgCall" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="GroupsIgnore" class="form-check-input" type="checkbox" />
                                    <label asp-for="GroupsIgnore" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="AlwaysOnline" class="form-check-input" type="checkbox" />
                                    <label asp-for="AlwaysOnline" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="ReadMessages" class="form-check-input" type="checkbox" />
                                    <label asp-for="ReadMessages" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="ReadStatus" class="form-check-input" type="checkbox" />
                                    <label asp-for="ReadStatus" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Botões de Ação -->
                        <div class="row">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-arrow-left"></i> Voltar
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle"></i> Criar Instância
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
