@model Evolution.Client.CSharp.Models.Instance.InstanceResponse

@{
    ViewData["Title"] = "Detalhes da Instância";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2>Detalhes da Instância: @Model.Instance?.InstanceName</h2>
            <a asp-action="Index" class="btn btn-light">Voltar para Lista</a>
        </div>
        <div class="card-body">
            @if (Model.Instance != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h4>Informações Básicas</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-4">Nome:</dt>
                                <dd class="col-sm-8">@Model.Instance.InstanceName</dd>

                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Instance.InstanceId</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Instance.Status == "open")
                                    {
                                        <span class="badge bg-success">Aberto</span>
                                    }
                                    else if (Model.Instance.Status == "close")
                                    {
                                        <span class="badge bg-danger">Fechado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.Instance.Status</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Proprietário:</dt>
                                <dd class="col-sm-8">@Model.Instance.Owner</dd>
                            </dl>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h4>Informações de Conexão</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-4">URL do Servidor:</dt>
                                <dd class="col-sm-8">@Model.Instance.ServerUrl</dd>

                                <dt class="col-sm-4">API Key:</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Instance.ApiKey) ? "<não disponível>" : Model.Instance.ApiKey)</dd>

                                <dt class="col-sm-4">Conectado:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Instance.Status == "open")
                                    {
                                        <span class="badge bg-success">Sim</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Não</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                @* Webhook information is not available in the current model *@
                <div class="mt-4">
                    <h4>Configuração de Webhook</h4>
                    <hr />
                    <div class="alert alert-info">
                        <p>As informações detalhadas de webhook não estão disponíveis na resposta básica da API.</p>
                        <p>Para obter detalhes de webhook, é necessário fazer uma chamada específica para o endpoint de webhook.</p>
                    </div>
                </div>

                @* Config information is not available in the current model *@
                <div class="mt-4">
                    <h4>Configurações</h4>
                    <hr />
                    <div class="alert alert-info">
                        <p>As informações detalhadas de configuração não estão disponíveis na resposta básica da API.</p>
                        <p>Para obter detalhes de configuração, é necessário fazer uma chamada específica para o endpoint de configurações.</p>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">Dados incompletos!</h4>
                    <p>Não foi possível obter os detalhes completos desta instância.</p>
                </div>
            }
        </div>
    </div>
</div>