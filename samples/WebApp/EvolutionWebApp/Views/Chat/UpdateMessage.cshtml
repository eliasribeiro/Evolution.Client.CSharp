@{
    ViewData["Title"] = "Atualizar Mensagem";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit mr-2"></i>
                        Atualizar Mensagem
                    </h3>
                </div>
                <div class="card-body">
                    <form id="updateMessageForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="instanceName">Nome da Instância <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="instanceName" name="instanceName" placeholder="Digite o nome da instância" required>
                                    <small class="form-text text-muted">Nome da instância do WhatsApp</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="number">Número do Destinatário <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="number" name="number" placeholder="5511999999999" required>
                                    <small class="form-text text-muted">Número com código do país (ex: 5511999999999)</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="remoteJid">Remote JID <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="remoteJid" name="remoteJid" placeholder="5511999999999@s.whatsapp.net" required>
                                    <small class="form-text text-muted">JID remoto do chat (ex: 5511999999999@s.whatsapp.net)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="messageId">ID da Mensagem <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="messageId" name="messageId" placeholder="Digite o ID da mensagem" required>
                                    <small class="form-text text-muted">ID único da mensagem a ser atualizada</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="text">Novo Texto da Mensagem <span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="text" name="text" rows="4" placeholder="Digite o novo conteúdo da mensagem..." required></textarea>
                                    <small class="form-text text-muted">Novo conteúdo que substituirá o texto atual da mensagem</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="fromMe" name="fromMe" checked>
                                        <label class="custom-control-label" for="fromMe">Mensagem enviada por mim</label>
                                        <small class="form-text text-muted d-block">Marque se a mensagem foi enviada pelo proprietário da instância</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-edit mr-2"></i>
                                Atualizar Mensagem
                            </button>
                            <button type="button" class="btn btn-secondary ml-2" onclick="clearForm()">
                                <i class="fas fa-eraser mr-2"></i>
                                Limpar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Seção de Resultados -->
    <div class="row mt-4" id="resultSection" style="display: none;">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-check-circle mr-2"></i>
                        Resultado da Atualização
                    </h3>
                </div>
                <div class="card-body">
                    <div id="resultContent"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Seção de Informações -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-info-circle mr-2"></i>
                        Informações Importantes
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="fas fa-exclamation-triangle text-warning mr-2"></i>Requisitos</h5>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success mr-2"></i>Instância deve estar conectada</li>
                                <li><i class="fas fa-check text-success mr-2"></i>Mensagem deve existir e ser editável</li>
                                <li><i class="fas fa-check text-success mr-2"></i>Apenas mensagens de texto podem ser editadas</li>
                                <li><i class="fas fa-check text-success mr-2"></i>Só é possível editar mensagens próprias</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-lightbulb text-info mr-2"></i>Dicas</h5>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-arrow-right text-primary mr-2"></i>Use a busca de mensagens para encontrar o ID</li>
                                <li><i class="fas fa-arrow-right text-primary mr-2"></i>O Remote JID é o identificador do chat</li>
                                <li><i class="fas fa-arrow-right text-primary mr-2"></i>Para grupos, use o formato: grupo@g.us</li>
                                <li><i class="fas fa-arrow-right text-primary mr-2"></i>Para contatos, use: numero@s.whatsapp.net</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Seção de Dicas de Uso -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-question-circle mr-2"></i>
                        Como Usar
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="info-box bg-light">
                                <span class="info-box-icon bg-primary"><i class="fas fa-search"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">1. Encontre a Mensagem</span>
                                    <span class="info-box-number">Use a busca de mensagens para obter o ID e Remote JID</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-box bg-light">
                                <span class="info-box-icon bg-warning"><i class="fas fa-edit"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">2. Preencha os Dados</span>
                                    <span class="info-box-number">Insira todas as informações obrigatórias</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-box bg-light">
                                <span class="info-box-icon bg-success"><i class="fas fa-check"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">3. Atualize</span>
                                    <span class="info-box-number">Clique em "Atualizar Mensagem" e aguarde o resultado</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#updateMessageForm').on('submit', function(e) {
                e.preventDefault();
                updateMessage();
            });
        });

        function updateMessage() {
            const form = $('#updateMessageForm');
            const submitBtn = form.find('button[type="submit"]');
            const originalText = submitBtn.html();

            // Validação básica
            const instanceName = $('#instanceName').val().trim();
            const number = $('#number').val().trim();
            const text = $('#text').val().trim();
            const remoteJid = $('#remoteJid').val().trim();
            const messageId = $('#messageId').val().trim();

            if (!instanceName || !number || !text || !remoteJid || !messageId) {
                showAlert('Todos os campos obrigatórios devem ser preenchidos.', 'warning');
                return;
            }

            // Desabilita o botão e mostra loading
            submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-2"></i>Atualizando...');

            const formData = {
                instanceName: instanceName,
                number: number,
                text: text,
                remoteJid: remoteJid,
                messageId: messageId,
                fromMe: $('#fromMe').is(':checked')
            };

            $.ajax({
                url: '@Url.Action("UpdateMessage", "Chat")',
                type: 'POST',
                data: formData,
                success: function(response) {
                    if (response.success) {
                        showAlert(response.message, 'success');
                        displayResult(response.data);
                    } else {
                        showAlert(response.message, 'error');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Erro na requisição:', error);
                    showAlert('Erro de comunicação com o servidor. Tente novamente.', 'error');
                },
                complete: function() {
                    // Reabilita o botão
                    submitBtn.prop('disabled', false).html(originalText);
                }
            });
        }

        function displayResult(data) {
            const resultSection = $('#resultSection');
            const resultContent = $('#resultContent');

            let html = `
                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-key text-primary mr-2"></i>Informações da Mensagem</h5>
                        <table class="table table-sm table-bordered">
                            <tr>
                                <td><strong>ID da Mensagem:</strong></td>
                                <td><code>${data.key.id}</code></td>
                            </tr>
                            <tr>
                                <td><strong>Remote JID:</strong></td>
                                <td><code>${data.key.remoteJid}</code></td>
                            </tr>
                            <tr>
                                <td><strong>Enviada por mim:</strong></td>
                                <td><span class="badge ${data.key.fromMe ? 'badge-success' : 'badge-secondary'}">${data.key.fromMe ? 'Sim' : 'Não'}</span></td>
                            </tr>
                            ${data.key.participant ? `
                            <tr>
                                <td><strong>Participante:</strong></td>
                                <td><code>${data.key.participant}</code></td>
                            </tr>
                            ` : ''}
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-comment text-success mr-2"></i>Conteúdo Atualizado</h5>
                        <div class="card">
                            <div class="card-body">
                                ${data.message.conversation ? `
                                    <p><strong>Texto:</strong></p>
                                    <div class="alert alert-light">${data.message.conversation}</div>
                                ` : ''}
                                ${data.message.extendedTextMessage ? `
                                    <p><strong>Texto Estendido:</strong></p>
                                    <div class="alert alert-light">${data.message.extendedTextMessage.text}</div>
                                ` : ''}
                                ${data.messageTimestamp ? `
                                    <p><strong>Timestamp:</strong> <code>${new Date(data.messageTimestamp * 1000).toLocaleString()}</code></p>
                                ` : ''}
                                ${data.status ? `
                                    <p><strong>Status:</strong> <span class="badge badge-info">${data.status}</span></p>
                                ` : ''}
                            </div>
                        </div>
                    </div>
                </div>
            `;

            resultContent.html(html);
            resultSection.show();

            // Scroll para a seção de resultados
            $('html, body').animate({
                scrollTop: resultSection.offset().top - 100
            }, 500);
        }

        function clearForm() {
            $('#updateMessageForm')[0].reset();
            $('#resultSection').hide();
            showAlert('Formulário limpo com sucesso!', 'info');
        }

        function showAlert(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 
                              type === 'error' ? 'alert-danger' : 
                              type === 'warning' ? 'alert-warning' : 'alert-info';
            
            const icon = type === 'success' ? 'check-circle' : 
                        type === 'error' ? 'exclamation-triangle' : 
                        type === 'warning' ? 'exclamation-triangle' : 'info-circle';

            const alert = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${icon} mr-2"></i>
                    ${message}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            `;

            // Remove alertas anteriores
            $('.alert').remove();
            
            // Adiciona o novo alerta no topo da página
            $('body').prepend(alert);

            // Auto-remove após 5 segundos
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }
    </script>
}