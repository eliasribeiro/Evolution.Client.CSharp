@model UpdateGroupDescriptionViewModel

@{
    ViewData["Title"] = "Atualizar Descrição do Grupo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-align-left"></i> Atualizar Descrição do Grupo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateGroupDescription" method="post">
                        <div class="mb-3">
                            <label asp-for="InstanceName" class="form-label">
                                <i class="fas fa-server"></i> Nome da Instância
                            </label>
                            <input asp-for="InstanceName" class="form-control" placeholder="Digite o nome da instância" required />
                            <span asp-validation-for="InstanceName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GroupJid" class="form-label">
                                <i class="fas fa-hashtag"></i> ID do Grupo (JID)
                            </label>
                            <input asp-for="GroupJid" class="form-control" placeholder="Digite o JID do grupo" required />
                            <small class="form-text text-muted">Exemplo: 120363123456789012@g.us</small>
                            <span asp-validation-for="GroupJid" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left"></i> Nova Descrição do Grupo
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Digite a nova descrição do grupo" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-secondary btn-lg">
                                <i class="fas fa-save"></i> Atualizar Descrição
                            </button>
                        </div>
                    </form>

                    @if (Model?.HasError == true)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Erro:</strong> @Model.Result
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(Model?.Result))
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            <i class="fas fa-check-circle"></i>
                            <strong>Sucesso:</strong> Descrição do grupo atualizada com sucesso!
                            <div class="mt-2">
                                <strong>Resultado:</strong> @Model.Result
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}