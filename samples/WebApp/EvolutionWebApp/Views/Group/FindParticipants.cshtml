@model EvolutionWebApp.ViewModels.FindParticipantsViewModel

@{
    ViewData["Title"] = "Buscar Participantes";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-users"></i> Buscar Participantes do Grupo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="FindParticipants" method="post">
                        <div class="mb-3">
                            <label asp-for="InstanceName" class="form-label">Nome da Instância</label>
                            <input asp-for="InstanceName" class="form-control" placeholder="Digite o nome da instância" required />
                            <span asp-validation-for="InstanceName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GroupJid" class="form-label">JID do Grupo</label>
                            <input asp-for="GroupJid" class="form-control" placeholder="Digite o JID do grupo (ex: 123456789@g.us)" required />
                            <span asp-validation-for="GroupJid" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-users"></i> Buscar Participantes
                            </button>
                        </div>
                    </form>

                    @if (Model.IsSuccess && Model.Result != null)
                    {
                        <div class="alert alert-success mt-4">
                            <h5><i class="fas fa-check-circle"></i> @Model.Result.Participants.Count participante(s) encontrado(s)!</h5>
                        </div>

                        @if (Model.Result.Participants.Any())
                        {
                            <div class="table-responsive mt-3">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID do Participante</th>
                                            <th>Tipo</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var participant in Model.Result.Participants)
                                        {
                                            <tr>
                                                <td>
                                                    <span id="participantId_@(participant.Id?.Replace("@", "_").Replace(".", "_") ?? "unknown")">@participant.Id</span>
                                                    <button type="button" class="btn btn-sm btn-outline-secondary ms-1" onclick="copyToClipboard('participantId_@(participant.Id?.Replace("@", "_").Replace(".", "_") ?? "unknown")')">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(participant.Admin))
                                                    {
                                                        @if (participant.Admin == "superadmin")
                                                        {
                                                            <span class="badge bg-danger">
                                                                <i class="fas fa-crown"></i> Super Administrador
                                                            </span>
                                                        }
                                                        else if (participant.Admin == "admin")
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-crown"></i> Administrador
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-warning">
                                                                <i class="fas fa-star"></i> @participant.Admin
                                                            </span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">
                                                            <i class="fas fa-user"></i> Membro
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        @if (string.IsNullOrEmpty(participant.Admin))
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-success" title="Promover a Admin">
                                                                <i class="fas fa-arrow-up"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-warning" title="Rebaixar de Admin">
                                                                <i class="fas fa-arrow-down"></i>
                                                            </button>
                                                        }
                                                        <button type="button" class="btn btn-sm btn-outline-danger" title="Remover do Grupo">
                                                            <i class="fas fa-user-minus"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="mt-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="card-title">Estatísticas</h6>
                                                <p class="card-text">
                                                    <strong>Total:</strong> @Model.Result.Participants.Count participantes<br />
                                                    <strong>Administradores:</strong> @Model.Result.Participants.Count(p => !string.IsNullOrEmpty(p.Admin))<br />
                                                    <strong>Membros:</strong> @Model.Result.Participants.Count(p => string.IsNullOrEmpty(p.Admin))
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="card-title">Ações Rápidas</h6>
                                                <a href="/Group/UpdateParticipant" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i> Gerenciar Participantes
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mt-3">
                                <i class="fas fa-info-circle"></i> Nenhum participante encontrado neste grupo.
                            </div>
                        }
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-4">
                            <h5><i class="fas fa-exclamation-triangle"></i> Erro</h5>
                            <p>@Model.ErrorMessage</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copyToClipboard(elementId) {
        const element = document.getElementById(elementId);
        const text = element.textContent;
        navigator.clipboard.writeText(text).then(function() {
            // Feedback visual
            const button = element.nextElementSibling;
            const originalIcon = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i>';
            button.classList.remove('btn-outline-secondary');
            button.classList.add('btn-success');
            
            setTimeout(function() {
                button.innerHTML = originalIcon;
                button.classList.remove('btn-success');
                button.classList.add('btn-outline-secondary');
            }, 2000);
        });
    }
</script>