<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Evolution API Demo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EvolutionWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Evolution API Demo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Instances" asp-action="Index">
                                <i class="bi bi-hdd-stack"></i> Instâncias
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="messageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-envelope"></i> Mensagens
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="messageDropdown">
                                <li><a class="dropdown-item" href="/Message/Index"><i class="fas fa-tachometer-alt"></i> Dashboard de Mensagens</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Message/SendText"><i class="fas fa-comment"></i> Enviar Texto</a></li>
                                <li><a class="dropdown-item" href="/Message/SendAudio"><i class="fas fa-microphone"></i> Enviar Áudio</a></li>
                                <li><a class="dropdown-item" href="/Message/SendSticker"><i class="fas fa-smile"></i> Enviar Sticker</a></li>
                                <li><a class="dropdown-item" href="/Message/SendLocation"><i class="fas fa-map-marker-alt"></i> Enviar Localização</a></li>
                                <li><a class="dropdown-item" href="/Message/SendContact"><i class="fas fa-address-card"></i> Enviar Contato</a></li>
                                <li><a class="dropdown-item" href="/Message/SendReaction"><i class="fas fa-heart"></i> Enviar Reação</a></li>
                                <li><a class="dropdown-item" href="/Message/SendPoll"><i class="fas fa-poll"></i> Enviar Enquete</a></li>
                                <li><a class="dropdown-item" href="/Message/SendList"><i class="fas fa-list"></i> Enviar Lista</a></li>
                                <li><a class="dropdown-item" href="/Message/SendButton"><i class="fas fa-mouse-pointer"></i> Enviar Botões</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Message/SendMedia"><i class="fas fa-file-upload"></i> Enviar Mídia</a></li>
                                <li><a class="dropdown-item" href="/Message/SendStatus"><i class="fas fa-broadcast-tower"></i> Enviar Status</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="chatDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-chat-dots"></i> Chat
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="chatDropdown">
                                <li><a class="dropdown-item" href="/Chat/Index"><i class="fas fa-tachometer-alt"></i> Dashboard do Chat</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Chat/CheckWhatsApp"><i class="fas fa-check-circle"></i> Verificar WhatsApp</a></li>
                                <li><a class="dropdown-item" href="/Chat/FindContacts"><i class="fas fa-address-book"></i> Buscar Contatos</a></li>
                                <li><a class="dropdown-item" href="/Chat/FindChats"><i class="fas fa-comments"></i> Buscar Chats</a></li>
                                <li><a class="dropdown-item" href="/Chat/FindMessages"><i class="fas fa-envelope"></i> Buscar Mensagens</a></li>
                                <li><a class="dropdown-item" href="/Chat/UpdateMessage"><i class="fas fa-edit"></i> Atualizar Mensagem</a></li>
                                <li><a class="dropdown-item" href="/Chat/FetchProfilePicUrl"><i class="fas fa-user-circle"></i> Buscar Foto de Perfil</a></li>
                                <li><a class="dropdown-item" href="/Chat/DeleteMessageForEveryone"><i class="fas fa-trash-alt"></i> Deletar Mensagem</a></li>
                                <li><a class="dropdown-item" href="/Chat/GetBase64FromMediaMessage"><i class="fas fa-file-download"></i> Obter Base64 de Mídia</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="groupDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Grupos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="groupDropdown">
                                <li><a class="dropdown-item" href="/Group/CreateGroup"><i class="fas fa-plus-circle"></i> Criar Grupo</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Group/UpdateGroupPicture"><i class="fas fa-image"></i> Atualizar Foto</a></li>
                                <li><a class="dropdown-item" href="/Group/UpdateGroupSubject"><i class="fas fa-edit"></i> Atualizar Nome</a></li>
                                <li><a class="dropdown-item" href="/Group/UpdateGroupDescription"><i class="fas fa-align-left"></i> Atualizar Descrição</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Group/FetchInviteCode"><i class="fas fa-link"></i> Buscar Código de Convite</a></li>
                                <li><a class="dropdown-item" href="/Group/RevokeInviteCode"><i class="fas fa-ban"></i> Revogar Código de Convite</a></li>
                                <li><a class="dropdown-item" href="/Group/SendGroupInvite"><i class="fas fa-paper-plane"></i> Enviar Convite</a></li>
                                <li><a class="dropdown-item" href="/Group/FindGroupByInviteCode"><i class="fas fa-search"></i> Buscar Grupo por Convite</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="FindGroupByJid">Buscar por JID</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="FetchAllGroups">Listar Todos os Grupos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="FindParticipants">Buscar Participantes</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="UpdateParticipant">Atualizar Participantes</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="UpdateGroupSetting">Atualizar Configurações</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="ToggleEphemeral">Alternar Mensagens Efêmeras</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Group" asp-action="LeaveGroup">Sair do Grupo</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock"></i> Privacidade
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Evolution API Demo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a> | <a href="https://github.com/eliasdevs/Evolution.Client.CSharp" target="_blank">GitHub</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
