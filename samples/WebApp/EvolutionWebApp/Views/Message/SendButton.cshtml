@model EvolutionWebApp.Models.SendButtonMessageViewModel

@{
    ViewData["Title"] = "Enviar Botões";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-mouse-pointer text-warning"></i> Enviar Botões</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Message" asp-action="Index">Mensagens</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Enviar Botões</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-mouse-pointer"></i> Enviar Botões
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="SendButton" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="InstanceName" class="form-label">Instância <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="InstanceName" name="InstanceName" 
                                           value="@ViewBag.InstanceName" placeholder="Digite o nome da instância" required>
                                    <div class="form-text">Nome da instância conectada ao WhatsApp</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Number" class="form-label">Número do Destinatário <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="Number" name="Number" 
                                           value="@ViewBag.Number" placeholder="5511999999999" required>
                                    <div class="form-text">Número com código do país (sem símbolos)</div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-edit"></i> Configuração da Mensagem</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="Title" class="form-label">Título <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="Title" name="Title" 
                                           value="@ViewBag.Title" placeholder="Escolha uma opção" required>
                                    <div class="form-text">Título principal da mensagem</div>
                                </div>

                                <div class="mb-3">
                                    <label for="Description" class="form-label">Descrição</label>
                                    <textarea class="form-control" id="Description" name="Description" rows="3" 
                                              placeholder="Selecione uma das opções abaixo para continuar">@ViewBag.Description</textarea>
                                    <div class="form-text">Descrição da mensagem (opcional)</div>
                                </div>

                                <div class="mb-3">
                                    <label for="Footer" class="form-label">Rodapé</label>
                                    <input type="text" class="form-control" id="Footer" name="Footer" 
                                           value="@ViewBag.Footer" placeholder="Powered by Evolution API">
                                    <div class="form-text">Texto do rodapé (opcional)</div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0"><i class="fas fa-hand-pointer"></i> Botões da Mensagem</h6>
                                <button type="button" class="btn btn-sm btn-outline-warning" onclick="addSampleButtons()">
                                    <i class="fas fa-plus"></i> Exemplo
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="Buttons" class="form-label">Botões (JSON) <span class="text-danger">*</span></label>
                                    <textarea class="form-control font-monospace" id="Buttons" name="Buttons" rows="12" 
                                              placeholder='[{"type": "reply", "displayText": "Sim", "id": "btn_sim"}]' required>@ViewBag.Buttons</textarea>
                                    <div class="form-text">Estrutura JSON dos botões da mensagem</div>
                                </div>

                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i>
                                    <strong>Estrutura JSON:</strong><br>
                                    <code>
                                        [<br>
                                        &nbsp;&nbsp;{<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;"type": "reply",<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;"displayText": "Texto do Botão",<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;"id": "id_unico_botao"<br>
                                        &nbsp;&nbsp;}<br>
                                        ]
                                    </code>
                                </div>

                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <strong>Tipos de botão disponíveis:</strong><br>
                                    • <strong>reply:</strong> Botão de resposta rápida<br>
                                    • <strong>call:</strong> Botão para fazer ligação<br>
                                    • <strong>url:</strong> Botão com link externo
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Delay" class="form-label">Atraso (ms)</label>
                                    <input type="number" class="form-control" id="Delay" name="Delay" 
                                           value="@ViewBag.Delay" placeholder="0" min="0" max="60000">
                                    <div class="form-text">Atraso em milissegundos antes de enviar</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Mentioned" class="form-label">Usuários Mencionados</label>
                                    <input type="text" class="form-control" id="Mentioned" name="Mentioned" 
                                           value="@ViewBag.Mentioned" placeholder="5511999999999, 5511888888888">
                                    <div class="form-text">JIDs separados por vírgula (opcional)</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="LinkPreview" name="LinkPreview" 
                                               value="true" @(ViewBag.LinkPreview == true ? "checked" : "")>
                                        <label class="form-check-label" for="LinkPreview">
                                            Exibir preview de links
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="MentionsEveryOne" name="MentionsEveryOne" 
                                               value="true" @(ViewBag.MentionsEveryOne == true ? "checked" : "")>
                                        <label class="form-check-label" for="MentionsEveryOne">
                                            Mencionar todos (grupos)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-reply"></i> Mensagem Citada (Opcional)</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="QuotedMessageId" class="form-label">ID da Mensagem</label>
                                            <input type="text" class="form-control" id="QuotedMessageId" name="QuotedMessageId" 
                                                   value="@ViewBag.QuotedMessageId" placeholder="ID da mensagem a ser citada">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="QuotedMessageText" class="form-label">Texto da Mensagem</label>
                                            <input type="text" class="form-control" id="QuotedMessageText" name="QuotedMessageText" 
                                                   value="@ViewBag.QuotedMessageText" placeholder="Texto da mensagem citada">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-mouse-pointer"></i> Enviar Botões
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Informações
                    </h5>
                </div>
                <div class="card-body">
                    <h6><i class="fas fa-lightbulb text-warning"></i> Como usar:</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Preencha a instância e número</li>
                        <li><i class="fas fa-check text-success"></i> Configure título e descrição</li>
                        <li><i class="fas fa-check text-success"></i> Defina os botões em JSON</li>
                        <li><i class="fas fa-check text-success"></i> Clique em "Enviar Botões"</li>
                    </ul>

                    <h6 class="mt-3"><i class="fas fa-hand-pointer text-warning"></i> Limites:</h6>
                    <ul class="list-unstyled">
                        <li>Máximo: 3 botões por mensagem</li>
                        <li>Cada botão precisa de ID único</li>
                        <li>Texto limitado a 20 caracteres</li>
                    </ul>

                    <h6 class="mt-3"><i class="fas fa-cog text-primary"></i> Tipos de botão:</h6>
                    <ul class="list-unstyled">
                        <li><strong>reply:</strong> Resposta rápida</li>
                        <li><strong>call:</strong> Fazer ligação</li>
                        <li><strong>url:</strong> Abrir link</li>
                    </ul>

                    <div class="alert alert-success mt-3">
                        <i class="fas fa-rocket"></i>
                        <strong>Dica:</strong> Use botões para criar interfaces 
                        interativas e melhorar a experiência do usuário.
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model?.Result != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-check-circle text-success"></i> Resultado do Envio
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>ID da Mensagem:</strong> @Model.Result.MessageId</p>
                                <p><strong>Status:</strong> @Model.Result.Status</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Timestamp:</strong> @Model.Result.MessageTimestamp</p>
                                <p><strong>JID Remoto:</strong> @Model.Result.RemoteJid</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function addSampleButtons() {
        const sampleJson = `[
  {
    "type": "reply",
    "displayText": "✅ Sim",
    "id": "btn_sim"
  },
  {
    "type": "reply",
    "displayText": "❌ Não",
    "id": "btn_nao"
  },
  {
    "type": "reply",
    "displayText": "ℹ️ Mais Info",
    "id": "btn_info"
  }
]`;
        document.getElementById('Buttons').value = sampleJson;
    }

    // Validação básica de JSON
    document.getElementById('Buttons').addEventListener('blur', function() {
        try {
            if (this.value.trim()) {
                const buttons = JSON.parse(this.value);
                if (Array.isArray(buttons) && buttons.length <= 3) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    throw new Error('Máximo 3 botões permitidos');
                }
            }
        } catch (e) {
            this.classList.remove('is-valid');
            this.classList.add('is-invalid');
        }
    });
</script>