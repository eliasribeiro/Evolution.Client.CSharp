@model EvolutionWebApp.Models.SendContactMessageViewModel

@{
    ViewData["Title"] = "Enviar Contato";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-address-card text-primary"></i> Enviar Contato</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Message" asp-action="Index">Mensagens</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Enviar Contato</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-address-card"></i> Enviar Contato
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="SendContact" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="InstanceName" class="form-label">Instância <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="InstanceName" name="InstanceName" 
                                           value="@ViewBag.InstanceName" placeholder="Digite o nome da instância" required>
                                    <div class="form-text">Nome da instância conectada ao WhatsApp</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Number" class="form-label">Número do Destinatário <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="Number" name="Number" 
                                           value="@ViewBag.Number" placeholder="5511999999999" required>
                                    <div class="form-text">Número com código do país (sem símbolos)</div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-user"></i> Informações do Contato</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="FullName" class="form-label">Nome Completo <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="FullName" name="FullName" 
                                                   value="@ViewBag.FullName" placeholder="João Silva" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="Organization" class="form-label">Organização</label>
                                            <input type="text" class="form-control" id="Organization" name="Organization" 
                                                   value="@ViewBag.Organization" placeholder="Empresa ABC">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="PhoneNumbers" class="form-label">Telefones</label>
                                            <textarea class="form-control" id="PhoneNumbers" name="PhoneNumbers" rows="3" 
                                                      placeholder="5511999999999&#10;5511888888888">@ViewBag.PhoneNumbers</textarea>
                                            <div class="form-text">Um número por linha</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="Emails" class="form-label">E-mails</label>
                                            <textarea class="form-control" id="Emails" name="Emails" rows="3" 
                                                      placeholder="joao@empresa.com&#10;joao.silva@gmail.com">@ViewBag.Emails</textarea>
                                            <div class="form-text">Um e-mail por linha</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="Urls" class="form-label">URLs</label>
                                    <textarea class="form-control" id="Urls" name="Urls" rows="2" 
                                              placeholder="https://www.empresa.com&#10;https://linkedin.com/in/joao">@ViewBag.Urls</textarea>
                                    <div class="form-text">Uma URL por linha</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Delay" class="form-label">Atraso (ms)</label>
                                    <input type="number" class="form-control" id="Delay" name="Delay" 
                                           value="@ViewBag.Delay" placeholder="0" min="0" max="60000">
                                    <div class="form-text">Atraso em milissegundos antes de enviar</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Mentioned" class="form-label">Usuários Mencionados</label>
                                    <input type="text" class="form-control" id="Mentioned" name="Mentioned" 
                                           value="@ViewBag.Mentioned" placeholder="5511999999999, 5511888888888">
                                    <div class="form-text">JIDs separados por vírgula (opcional)</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="LinkPreview" name="LinkPreview" 
                                               value="true" @(ViewBag.LinkPreview == true ? "checked" : "")>
                                        <label class="form-check-label" for="LinkPreview">
                                            Exibir preview de links
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="MentionsEveryOne" name="MentionsEveryOne" 
                                               value="true" @(ViewBag.MentionsEveryOne == true ? "checked" : "")>
                                        <label class="form-check-label" for="MentionsEveryOne">
                                            Mencionar todos (grupos)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-reply"></i> Mensagem Citada (Opcional)</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="QuotedMessageId" class="form-label">ID da Mensagem</label>
                                            <input type="text" class="form-control" id="QuotedMessageId" name="QuotedMessageId" 
                                                   value="@ViewBag.QuotedMessageId" placeholder="ID da mensagem a ser citada">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="QuotedMessageText" class="form-label">Texto da Mensagem</label>
                                            <input type="text" class="form-control" id="QuotedMessageText" name="QuotedMessageText" 
                                                   value="@ViewBag.QuotedMessageText" placeholder="Texto da mensagem citada">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-address-card"></i> Enviar Contato
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Informações
                    </h5>
                </div>
                <div class="card-body">
                    <h6><i class="fas fa-lightbulb text-warning"></i> Como usar:</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Preencha a instância e número (obrigatórios)</li>
                        <li><i class="fas fa-check text-success"></i> Digite o nome completo do contato</li>
                        <li><i class="fas fa-check text-success"></i> Adicione informações adicionais</li>
                        <li><i class="fas fa-check text-success"></i> Clique em "Enviar Contato"</li>
                    </ul>

                    <h6 class="mt-3"><i class="fas fa-phone text-info"></i> Formato do número:</h6>
                    <ul class="list-unstyled">
                        <li><strong>Correto:</strong> 5511999999999</li>
                        <li><strong>Incorreto:</strong> +55 (11) 99999-9999</li>
                        <li><strong>Incorreto:</strong> 11999999999</li>
                    </ul>

                    <h6 class="mt-3"><i class="fas fa-address-card text-primary"></i> Contato:</h6>
                    <ul class="list-unstyled">
                        <li>Nome completo é obrigatório</li>
                        <li>Outros campos são opcionais</li>
                        <li>Use uma linha por telefone/email/URL</li>
                    </ul>

                    <div class="alert alert-info mt-3">
                        <i class="fas fa-info-circle"></i>
                        <strong>Dica:</strong> Compartilhe informações de contato 
                        de forma organizada e profissional.
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model?.Result != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-check-circle text-success"></i> Resultado do Envio
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>ID da Mensagem:</strong> @Model.Result.MessageId</p>
                                <p><strong>Status:</strong> @Model.Result.Status</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Timestamp:</strong> @Model.Result.MessageTimestamp</p>
                                <p><strong>JID Remoto:</strong> @Model.Result.RemoteJid</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>