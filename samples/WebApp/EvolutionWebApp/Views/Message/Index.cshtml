@{
    ViewData["Title"] = "Mensagens";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-envelope text-primary"></i> Mensagens</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Mensagens</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <strong>Bem-vindo ao módulo de Mensagens!</strong>
                <p class="mb-0">
                    Utilize o menu <strong>Mensagens</strong> na barra de navegação para acessar as funcionalidades disponíveis:
                    <strong>Enviar Texto</strong>, <strong>Enviar Áudio</strong>, <strong>Enviar Sticker</strong>, <strong>Enviar Localização</strong> e muito mais.
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Card Enviar Mensagem de Texto -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-paper-plane fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Enviar Mensagem de Texto</h5>
                    <p class="card-text">
                        Envie mensagens de texto para contatos individuais ou grupos.
                        Suporte a menções, citações e preview de links.
                    </p>
                    <a asp-controller="Message" asp-action="SendText" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Enviar Mídia -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-file-upload fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Enviar Mídia</h5>
                    <p class="card-text">
                        Envie imagens, vídeos, áudios e documentos.
                        Suporte a legendas, menções e citações.
                    </p>
                    <a asp-controller="Message" asp-action="SendMedia" class="btn btn-success">
                        <i class="fas fa-file-upload"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Enviar Status -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-broadcast-tower fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Enviar Status</h5>
                    <p class="card-text">
                        Publique status no WhatsApp com texto, imagens ou áudios.
                        Configure cores, fontes e destinatários.
                    </p>
                    <a asp-controller="Message" asp-action="SendStatus" class="btn btn-warning">
                        <i class="fas fa-broadcast-tower"></i> Acessar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Card Enviar Áudio -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-microphone fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Enviar Áudio</h5>
                    <p class="card-text">
                        Envie mensagens de áudio para contatos individuais ou grupos.
                        Suporte a menções, citações e preview de links.
                    </p>
                    <a asp-controller="Message" asp-action="SendAudio" class="btn btn-info">
                        <i class="fas fa-microphone"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Enviar Sticker -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-smile fa-3x text-secondary"></i>
                    </div>
                    <h5 class="card-title">Enviar Sticker</h5>
                    <p class="card-text">
                        Envie stickers divertidos para seus contatos.
                        Suporte a formatos WEBP e PNG com transparência.
                    </p>
                    <a asp-controller="Message" asp-action="SendSticker" class="btn btn-secondary">
                        <i class="fas fa-smile"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Enviar Localização -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-map-marker-alt fa-3x text-danger"></i>
                    </div>
                    <h5 class="card-title">Enviar Localização</h5>
                    <p class="card-text">
                        Compartilhe localizações precisas usando coordenadas.
                        Inclua nome do local e endereço se desejar.
                    </p>
                    <a asp-controller="Message" asp-action="SendLocation" class="btn btn-danger">
                        <i class="fas fa-map-marker-alt"></i> Acessar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Card Enviar Contato -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-address-card fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Enviar Contato</h5>
                    <p class="card-text">
                        Compartilhe informações de contato incluindo nome, telefone, email e organização.
                        Ideal para networking e compartilhamento de dados.
                    </p>
                    <a asp-controller="Message" asp-action="SendContact" class="btn btn-primary">
                        <i class="fas fa-address-card"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Enviar Reação -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-heart fa-3x text-danger"></i>
                    </div>
                    <h5 class="card-title">Enviar Reação</h5>
                    <p class="card-text">
                        Reaja a mensagens específicas com emojis.
                        Expresse sentimentos e interaja de forma rápida.
                    </p>
                    <a asp-controller="Message" asp-action="SendReaction" class="btn btn-danger">
                        <i class="fas fa-heart"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Enviar Enquete -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-poll fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Enviar Enquete</h5>
                    <p class="card-text">
                        Crie enquetes interativas com múltiplas opções.
                        Colete opiniões e feedback dos seus contatos.
                    </p>
                    <a asp-controller="Message" asp-action="SendPoll" class="btn btn-success">
                        <i class="fas fa-poll"></i> Acessar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Card Enviar Lista -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-list fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Enviar Lista</h5>
                    <p class="card-text">
                        Envie listas organizadas com seções e itens.
                        Perfeito para menus, catálogos e opções estruturadas.
                    </p>
                    <a asp-controller="Message" asp-action="SendList" class="btn btn-info">
                        <i class="fas fa-list"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Enviar Botões -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-mouse-pointer fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Enviar Botões</h5>
                    <p class="card-text">
                        Crie mensagens interativas com botões clicáveis.
                        Facilite a navegação e interação dos usuários.
                    </p>
                    <a asp-controller="Message" asp-action="SendButton" class="btn btn-warning">
                        <i class="fas fa-mouse-pointer"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Placeholder para futuras funcionalidades -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-dashed">
                <div class="card-body text-center d-flex align-items-center justify-content-center">
                    <div>
                        <div class="mb-3">
                            <i class="fas fa-plus-circle fa-3x text-muted"></i>
                        </div>
                        <h5 class="card-title text-muted">Mais Funcionalidades</h5>
                        <p class="card-text text-muted">
                            Novas funcionalidades serão adicionadas em breve.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Informações Importantes
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-check-circle text-success"></i> Funcionalidades Disponíveis</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-paper-plane text-primary"></i> Envio de mensagens de texto</li>
                                <li><i class="fas fa-microphone text-info"></i> Envio de mensagens de áudio</li>
                                <li><i class="fas fa-smile text-secondary"></i> Envio de stickers</li>
                                <li><i class="fas fa-map-marker-alt text-danger"></i> Envio de localização</li>
                                <li><i class="fas fa-address-card text-primary"></i> Envio de contatos</li>
                                <li><i class="fas fa-heart text-danger"></i> Envio de reações</li>
                                <li><i class="fas fa-poll text-success"></i> Envio de enquetes</li>
                                <li><i class="fas fa-list text-info"></i> Envio de listas</li>
                                <li><i class="fas fa-mouse-pointer text-warning"></i> Envio de botões</li>
                                <li><i class="fas fa-file-upload text-success"></i> Envio de mídia (imagens, vídeos, documentos)</li>
                                <li><i class="fas fa-broadcast-tower text-warning"></i> Publicação de status</li>
                                <li><i class="fas fa-at text-info"></i> Menções a usuários específicos</li>
                                <li><i class="fas fa-reply text-warning"></i> Citação de mensagens</li>
                                <li><i class="fas fa-link text-success"></i> Preview de links</li>
                                <li><i class="fas fa-clock text-secondary"></i> Atraso no envio</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-exclamation-triangle text-warning"></i> Requisitos</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-server"></i> Instância conectada ao WhatsApp</li>
                                <li><i class="fas fa-phone"></i> Número válido do destinatário</li>
                                <li><i class="fas fa-key"></i> Permissões adequadas na API</li>
                                <li><i class="fas fa-wifi"></i> Conexão estável com a internet</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
