@model EvolutionWebApp.Models.SendListMessageViewModel

@{
    ViewData["Title"] = "Enviar Lista";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-list text-info"></i> Enviar Lista</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Message" asp-action="Index">Mensagens</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Enviar Lista</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list"></i> Enviar Lista
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="SendList" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="InstanceName" class="form-label">Instância <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="InstanceName" name="InstanceName" 
                                           value="@ViewBag.InstanceName" placeholder="Digite o nome da instância" required>
                                    <div class="form-text">Nome da instância conectada ao WhatsApp</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Number" class="form-label">Número do Destinatário <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="Number" name="Number" 
                                           value="@ViewBag.Number" placeholder="5511999999999" required>
                                    <div class="form-text">Número com código do país (sem símbolos)</div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-edit"></i> Configuração da Lista</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="Title" class="form-label">Título <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="Title" name="Title" 
                                                   value="@ViewBag.Title" placeholder="Menu Principal" required>
                                            <div class="form-text">Título principal da lista</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="ButtonText" class="form-label">Texto do Botão <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="ButtonText" name="ButtonText" 
                                                   value="@ViewBag.ButtonText" placeholder="Ver opções" required>
                                            <div class="form-text">Texto do botão para abrir a lista</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="Description" class="form-label">Descrição</label>
                                    <textarea class="form-control" id="Description" name="Description" rows="2" 
                                              placeholder="Escolha uma das opções abaixo">@ViewBag.Description</textarea>
                                    <div class="form-text">Descrição da lista (opcional)</div>
                                </div>

                                <div class="mb-3">
                                    <label for="FooterText" class="form-label">Rodapé</label>
                                    <input type="text" class="form-control" id="FooterText" name="FooterText" 
                                           value="@ViewBag.FooterText" placeholder="Powered by Evolution API">
                                    <div class="form-text">Texto do rodapé (opcional)</div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0"><i class="fas fa-list-ul"></i> Seções e Itens da Lista</h6>
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="addSampleList()">
                                    <i class="fas fa-plus"></i> Exemplo
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="Sections" class="form-label">Seções (JSON) <span class="text-danger">*</span></label>
                                    <textarea class="form-control font-monospace" id="Sections" name="Sections" rows="15" 
                                              placeholder='[{"title": "Seção 1", "rows": [{"title": "Item 1", "description": "Descrição do item 1", "rowId": "item1"}]}]' required>@ViewBag.Sections</textarea>
                                    <div class="form-text">Estrutura JSON das seções e itens da lista</div>
                                </div>

                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i>
                                    <strong>Estrutura JSON:</strong><br>
                                    <code>
                                        [<br>
                                        &nbsp;&nbsp;{<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;"title": "Nome da Seção",<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;"rows": [<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"title": "Título do Item",<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"description": "Descrição",<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"rowId": "id_unico"<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;}<br>
                                        &nbsp;&nbsp;&nbsp;&nbsp;]<br>
                                        &nbsp;&nbsp;}<br>
                                        ]
                                    </code>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Delay" class="form-label">Atraso (ms)</label>
                                    <input type="number" class="form-control" id="Delay" name="Delay" 
                                           value="@ViewBag.Delay" placeholder="0" min="0" max="60000">
                                    <div class="form-text">Atraso em milissegundos antes de enviar</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Mentioned" class="form-label">Usuários Mencionados</label>
                                    <input type="text" class="form-control" id="Mentioned" name="Mentioned" 
                                           value="@ViewBag.Mentioned" placeholder="5511999999999, 5511888888888">
                                    <div class="form-text">JIDs separados por vírgula (opcional)</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="LinkPreview" name="LinkPreview" 
                                               value="true" @(ViewBag.LinkPreview == true ? "checked" : "")>
                                        <label class="form-check-label" for="LinkPreview">
                                            Exibir preview de links
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="MentionsEveryOne" name="MentionsEveryOne" 
                                               value="true" @(ViewBag.MentionsEveryOne == true ? "checked" : "")>
                                        <label class="form-check-label" for="MentionsEveryOne">
                                            Mencionar todos (grupos)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-reply"></i> Mensagem Citada (Opcional)</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="QuotedMessageId" class="form-label">ID da Mensagem</label>
                                            <input type="text" class="form-control" id="QuotedMessageId" name="QuotedMessageId" 
                                                   value="@ViewBag.QuotedMessageId" placeholder="ID da mensagem a ser citada">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="QuotedMessageText" class="form-label">Texto da Mensagem</label>
                                            <input type="text" class="form-control" id="QuotedMessageText" name="QuotedMessageText" 
                                                   value="@ViewBag.QuotedMessageText" placeholder="Texto da mensagem citada">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-info btn-lg">
                                <i class="fas fa-list"></i> Enviar Lista
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Informações
                    </h5>
                </div>
                <div class="card-body">
                    <h6><i class="fas fa-lightbulb text-warning"></i> Como usar:</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Preencha a instância e número</li>
                        <li><i class="fas fa-check text-success"></i> Configure título e botão</li>
                        <li><i class="fas fa-check text-success"></i> Defina as seções em JSON</li>
                        <li><i class="fas fa-check text-success"></i> Clique em "Enviar Lista"</li>
                    </ul>

                    <h6 class="mt-3"><i class="fas fa-list text-info"></i> Estrutura:</h6>
                    <ul class="list-unstyled">
                        <li>Máximo: 10 seções</li>
                        <li>Máximo: 10 itens por seção</li>
                        <li>Cada item precisa de ID único</li>
                    </ul>

                    <h6 class="mt-3"><i class="fas fa-code text-primary"></i> Campos obrigatórios:</h6>
                    <ul class="list-unstyled">
                        <li><strong>title:</strong> Título da seção/item</li>
                        <li><strong>rowId:</strong> ID único do item</li>
                        <li><strong>description:</strong> Opcional</li>
                    </ul>

                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Atenção:</strong> Use JSON válido para as seções. 
                        Clique em "Exemplo" para ver a estrutura.
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model?.Result != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-check-circle text-success"></i> Resultado do Envio
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>ID da Mensagem:</strong> @Model.Result.MessageId</p>
                                <p><strong>Status:</strong> @Model.Result.Status</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Timestamp:</strong> @Model.Result.MessageTimestamp</p>
                                <p><strong>JID Remoto:</strong> @Model.Result.RemoteJid</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function addSampleList() {
        const sampleJson = `[
  {
    "title": "🍕 Comidas",
    "rows": [
      {
        "title": "Pizza Margherita",
        "description": "Molho de tomate, mussarela e manjericão",
        "rowId": "pizza_margherita"
      },
      {
        "title": "Hambúrguer Clássico",
        "description": "Carne, queijo, alface e tomate",
        "rowId": "hamburguer_classico"
      }
    ]
  },
  {
    "title": "🥤 Bebidas",
    "rows": [
      {
        "title": "Coca-Cola",
        "description": "Refrigerante gelado 350ml",
        "rowId": "coca_cola"
      },
      {
        "title": "Suco de Laranja",
        "description": "Suco natural 300ml",
        "rowId": "suco_laranja"
      }
    ]
  }
]`;
        document.getElementById('Sections').value = sampleJson;
    }

    // Validação básica de JSON
    document.getElementById('Sections').addEventListener('blur', function() {
        try {
            if (this.value.trim()) {
                JSON.parse(this.value);
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            }
        } catch (e) {
            this.classList.remove('is-valid');
            this.classList.add('is-invalid');
        }
    });
</script>